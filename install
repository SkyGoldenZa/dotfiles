/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)" &&
git clone https://github.com/powerline/fonts &&
cd fonts &&
./install.sh &&
cd .. &&
rm -rf fonts &&
brew install nvm &&
nvm install 18.14.0 &&
nvm alias default 18.14.0 &&
source ~/.zshrc &&
brew install --cask google-chrome bitwarden slack iterm2 visual-studio-code webstorm spotify whatsapp signal zoom

# Open iTerm2->Preferences->Profiles->Change Font-> 12pt Meslo LG S DZ Regular for Powerline